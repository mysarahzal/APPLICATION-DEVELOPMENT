@model AspnetCoreMvcFull.Models.Schedule

@{
	ViewData["Title"] = "Delete Schedule";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<!-- Header -->
			<div class="d-flex align-items-center mb-4">
				<a asp-action="Index" class="btn btn-outline-secondary me-3">
					<i class="fas fa-arrow-left"></i>
				</a>
				<div>
					<h2 class="mb-1 text-danger">Delete Schedule</h2>
					<p class="text-muted mb-0">UC08: Admin Manages Pickup Schedule</p>
				</div>
			</div>

			<!-- Confirmation Card -->
			<div class="card shadow-sm border-danger">
				<div class="card-header bg-danger text-white">
					<div class="d-flex align-items-center">
						<i class="fas fa-exclamation-triangle me-2"></i>
						<h5 class="mb-0">Confirm Deletion</h5>
					</div>
				</div>

				<div class="card-body">
					<div class="alert alert-warning" role="alert">
						<i class="fas fa-warning me-2"></i>
						<strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this schedule?
					</div>

					<!-- Schedule Details -->
					<div class="bg-light p-4 rounded mb-4">
						<div class="row">
							<div class="col-sm-4"><strong>Collector:</strong></div>
							@* <div class="col-sm-8">@Model.Collector?.FullName (@Model.Collector?.Role)</div> *@
						</div>
						<hr class="my-2">
						<div class="row">
							<div class="col-sm-4"><strong>Route:</strong></div>
							@* <div class="col-sm-8">@Model.Road?.Name - @Model.Road?.Area</div> *@
						</div>
						<hr class="my-2">
						<div class="row">
							<div class="col-sm-4"><strong>Date & Time:</strong></div>
							@* <div class="col-sm-8">@Model.FormattedScheduledDateTime</div> *@
						</div>
						<hr class="my-2">
						<div class="row">
							<div class="col-sm-4"><strong>Status:</strong></div>
							<div class="col-sm-8">
								@* // <span class="@Model.StatusBadgeClass">@Model.Status</span> *@
							</div>
						</div>
						@* <hr class="my-2"> *@
						@* <div class="row"> *@
						@* 	<div class="col-sm-4"><strong>Priority:</strong></div> *@
						@* 	<div class="col-sm-8"> *@
						@* 		<span class="@Model.PriorityBadgeClass">@Model.Priority</span> *@
						@* 	</div> *@
						@* </div> *@
						@* @if (!string.IsNullOrEmpty(Model.Notes)) *@
						@* { *@
						@* 	<hr class="my-2"> *@
						@* 	<div class="row"> *@
						@* 		<div class="col-sm-4"><strong>Notes:</strong></div> *@
						@* 		<div class="col-sm-8">@Model.Notes</div> *@
						@* 	</div> *@
						@* } *@
					</div>

					<!-- Action Buttons -->
					<form asp-action="Delete" method="post">
						<input asp-for="Id" type="hidden" />
						<div class="d-flex gap-2">
							<button type="submit" class="btn btn-danger">
								<i class="fas fa-trash me-2"></i>Yes, Delete Schedule
							</button>
							<a asp-action="Index" class="btn btn-outline-secondary">
								<i class="fas fa-times me-2"></i>Cancel
							</a>
						</div>
					</form>
				</div>

				<div class="card-footer bg-light">
					<small class="text-muted">
						<i class="fas fa-info-circle me-1"></i>
						Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm") |
						Last Updated: @Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")
					</small>
				</div>
			</div>
		</div>
	</div>
</div>
