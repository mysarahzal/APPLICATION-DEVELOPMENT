@model AspnetCoreMvcFull.Models.Schedule

@{
	ViewData["Title"] = "Delete Schedule";
}

<h1>Delete Schedule</h1>

<h3>Are you sure you want to delete this schedule?</h3>
<div>
	<h4>Schedule</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">Driver</dt>
		<dd class="col-sm-10">@Model.Collector?.FirstName @Model.Collector?.LastName</dd>
		<dt class="col-sm-2">Route</dt>
		<dd class="col-sm-10">@Model.Route?.Name</dd>
		<dt class="col-sm-2">Start Time</dt>
		<dd class="col-sm-10">@Model.ScheduleStartTime.ToString("g")</dd>
		<dt class="col-sm-2">End Time</dt>
		<dd class="col-sm-10">@Model.ScheduleEndTime.ToString("g")</dd>
		<dt class="col-sm-2">Status</dt>
		<dd class="col-sm-10">@Model.Status</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	</form>
</div>
