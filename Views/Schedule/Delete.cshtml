@model AspnetCoreMvcFull.Models.Schedule

<h3>Are you sure you want to delete this schedule?</h3>

<div>
	<dl class="row">
		<dt class="col-sm-2">Truck ID</dt>
		<dd class="col-sm-10">@Model.TruckId</dd>

		<dt class="col-sm-2">Collector</dt>
		@* <dd class="col-sm-10">@Model.Collector?.FirstName @Model.Collector?.LastName</dd> *@

		<dt class="col-sm-2">Route</dt>
		@* <dd class="col-sm-10">@Model.Road?.Name</dd> *@

		<dt class="col-sm-2">Start Time</dt>
		<dd class="col-sm-10">@Model.ScheduleStartTime.ToString("g")</dd>

		<dt class="col-sm-2">Status</dt>
		<dd class="col-sm-10">@Model.Status</dd>
	</dl>

	<form asp-action="DeleteConfirmed" method="post">
		<input type="hidden" asp-for="Id" />
		<button type="submit" class="btn btn-danger">Delete</button>
		<a asp-action="Index" class="btn btn-secondary">Cancel</a>
	</form>
</div>
