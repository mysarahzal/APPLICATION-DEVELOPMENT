@model IEnumerable<AspnetCoreMvcFull.Models.Schedule>

<h2>All Job Schedules</h2>

<table class="table">
	<thead>
		<tr>
			<th>Collector</th>
			<th>Truck ID</th>
			<th>Route</th>
			<th>Scheduled Start</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Collector?.FirstName @item.Collector?.LastName</td>
				<td>@item.TruckId</td>
				<td>@item.Road?.Name</td>
				<td>@item.ScheduleStartTime.ToString("g")</td>
				<td>@item.Status</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Schedule</a>

@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
