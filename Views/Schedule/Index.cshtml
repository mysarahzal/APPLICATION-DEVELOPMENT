@model IEnumerable<AspnetCoreMvcFull.Models.Schedule>

@{
	ViewData["Title"] = "Manage Pickup Schedules";
}

<h1>Manage Pickup Schedules</h1>

<p>
	<a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>Schedule ID</th>
			<th>Driver</th>
			<th>Route</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.ScheduleId</td>
				<td>@item.Collector?.FirstName @item.Collector?.LastName</td>
				<td>@item.Route?.Name</td>
				<td>@item.ScheduleStartTime.ToString("g")</td>
				<td>@item.ScheduleEndTime.ToString("g")</td>
				<td>@item.Status</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
