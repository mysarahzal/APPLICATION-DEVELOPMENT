@model IEnumerable<AspnetCoreMvcFull.Models.Schedule>

@{
	ViewData["Title"] = "All Schedules";
}

<h2>All Schedules</h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Collector</th>
			<th>Route</th>
			<th>Start Time</th>
			<th>Status</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Collector?.FirstName</td>
				<td>@item.Road?.Name</td>
				<td>@item.ScheduleStartTime.ToString("g")</td>
				<td>
					@{
						string badgeClass = item.Status switch
						{
							"Completed" => "badge bg-success",
							"Missed" => "badge bg-danger",
							"Pending" => "badge bg-warning",
							_ => "badge bg-info"
						};
					}
					<span class="@badgeClass">@item.Status</span>
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New</a>
