@model IEnumerable<AspnetCoreMvcFull.Models.Schedule>

@{
    ViewData["Title"] = "Manage Pickup Schedules";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-calendar-alt"></i> Manage Pickup Schedules
                    </h4>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>ROUTE</th>
                                        <th>COLLECTOR</th>
                                        <th>TRUCK</th>
                                        <th>START TIME</th>
                                        <th>END TIME</th>
                                        <th>ROUTE CENTER</th>
                                        <th>COLLECTION POINTS</th>
                                        <th>STATUS</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var schedule in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#@schedule.Id</span>
                                            </td>
                                            <td>
                                                <strong>@schedule.Route?.Name</strong>
                                                @if (!string.IsNullOrEmpty(schedule.Route?.Description))
                                                {
                                                    <br>
                                        
                                                    <small class="text-muted">@schedule.Route.Description</small>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-user me-2"></i>
                                                    <div>
                                                        <strong>@schedule.Collector?.FirstName @schedule.Collector?.LastName</strong>
                                                        <br><small class="text-muted">@schedule.Collector?.Role</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-truck me-2"></i>
                                                    <div>
                                                        <strong>@schedule.Truck?.LicensePlate</strong>
                                                        <br><small class="text-muted">@schedule.Truck?.Model</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <i class="fas fa-clock me-1"></i>
                                                @schedule.ScheduleStartTime.ToString("dd/MM/yyyy")
                                                <br>
                                                <small class="text-muted">@schedule.ScheduleStartTime.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                <i class="fas fa-clock me-1"></i>
                                                @schedule.ScheduleEndTime.ToString("dd/MM/yyyy")
                                                <br>
                                                <small class="text-muted">@schedule.ScheduleEndTime.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (schedule.RouteCenterLatitude.HasValue && schedule.RouteCenterLongitude.HasValue)
                                                {
                                                    <div class="text-center">
                                                        <i class="fas fa-map-marker-alt text-primary"></i>
                                                        <br>
                                                        <small class="text-muted">
                                                            Lat: @schedule.RouteCenterLatitude.Value.ToString("F4")
                                                            <br>
                                                            Lng: @schedule.RouteCenterLongitude.Value.ToString("F4")
                                                        </small>
                                                        <br>
                                                        <a href="https://www.google.com/maps?q=@schedule.RouteCenterLatitude.Value,@schedule.RouteCenterLongitude.Value"
                                                           target="_blank" class="btn btn-sm btn-outline-info mt-1">
                                                            <i class="fas fa-external-link-alt"></i>
                                                        </a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-warning">
                                                        <i class="fas fa-exclamation-triangle"></i>
                                                        <br>
                                                        <small>No coordinates</small>
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-center">
                                                    @if (schedule.CollectionPoints != null && schedule.CollectionPoints.Any())
                                                    {
                                                        var totalPoints = schedule.CollectionPoints.Count();
                                                        var collectedPoints = schedule.CollectionPoints.Count(cp => cp.IsCollected);
                                                        var pointsWithCoords = schedule.CollectionPoints.Count(cp => cp.Latitude.HasValue && cp.Longitude.HasValue);

                                                        <span class="badge bg-info">@totalPoints Points</span>
                                                        <br>
                                                        <small class="text-success">@collectedPoints Collected</small>
                                                        <br>
                                                        <small class="text-primary">@pointsWithCoords with GPS</small>

                                                        @if (pointsWithCoords > 0)
                                                        {
                                                            <br>
                                                            <button type="button" class="btn btn-sm btn-outline-primary mt-1"
                                                                    data-bs-toggle="modal" data-bs-target="#coordinatesModal-@schedule.Id">
                                                                <i class="fas fa-map"></i> View
                                                            </button>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No points</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge @(schedule.Status == "Completed" ? "bg-success" :
                                                                                                                         schedule.Status == "In Progress" ? "bg-warning" :
                                                                                                                         schedule.Status == "Cancelled" ? "bg-danger" : "bg-primary")">
                                            @schedule.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@schedule.Id"
                                               class="btn btn-sm btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@schedule.Id"
                                               class="btn btn-sm btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@schedule.Id"
                                               class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                                                }
                                </tbody>
                            </table>
                        </div>

                        <!-- Modals for collection points (outside the table) -->
                        @foreach (var schedule in Model)
                        {
                            @if (schedule.CollectionPoints != null && schedule.CollectionPoints.Any(cp => cp.Latitude.HasValue && cp.Longitude.HasValue))
                            {
                                <div class="modal fade" id="coordinatesModal-@schedule.Id" tabindex="-1">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">
                                                    <i class="fas fa-map-marker-alt"></i>
                                                    Collection Points - Schedule #@schedule.Id (@schedule.Route?.Name)
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="table-responsive">
                                                    <table class="table table-sm">
                                                        <thead>
                                                            <tr>
                                                                <th>Order</th>
                                                                <th>Bin ID</th>
                                                                <th>Location</th>
                                                                <th>Coordinates</th>
                                                                <th>Status</th>
                                                                <th>Map</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cp in schedule.CollectionPoints.OrderBy(c => c.OrderInSchedule))
                                                            {
                                                                <tr class="@(cp.IsCollected ? "table-success" : "")">
                                                                    <td>
                                                                        <span class="badge bg-primary">@cp.OrderInSchedule</span>
                                                                    </td>
                                                                    <td>@cp.Bin?.BinPlateId</td>
                                                                    <td>@cp.Bin?.Location</td>
                                                                    <td>
                                                                        @if (cp.Latitude.HasValue && cp.Longitude.HasValue)
                                                                        {
                                                                            <small>
                                                                                Lat: @cp.Latitude.Value.ToString("F6")
                                                                                <br>
                                                                                Lng: @cp.Longitude.Value.ToString("F6")
                                                                            </small>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="text-warning">No coordinates</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (cp.IsCollected)
                                                                        {
                                                                            <span class="badge bg-success">Collected</span>
                                                                        }
                                                                        else
                                                                        {
                                                                            <span class="badge bg-warning">Pending</span>
                                                                        }
                                                                    </td>
                                                                    <td>
                                                                        @if (cp.Latitude.HasValue && cp.Longitude.HasValue)
                                                                        {
                                                                            <a href="https://www.google.com/maps?q=@cp.Latitude.Value,@cp.Longitude.Value"
                                                                               target="_blank" class="btn btn-sm btn-outline-info">
                                                                                <i class="fas fa-external-link-alt"></i>
                                                                            </a>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                                @if (schedule.CollectionPoints.Count(cp => cp.Latitude.HasValue && cp.Longitude.HasValue) > 1)
                                                {
                                                    <div class="text-center mt-3">
                                                        <a href="https://www.google.com/maps/dir/@(string.Join("/", schedule.CollectionPoints.Where(cp => cp.Latitude.HasValue && cp.Longitude.HasValue).OrderBy(cp => cp.OrderInSchedule).Select(cp => $"{cp.Latitude.Value},{cp.Longitude.Value}")))"
                                                           target="_blank" class="btn btn-primary">
                                                            <i class="fas fa-route"></i> View Full Route on Google Maps
                                                        </a>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }

                        <!-- Summary Statistics -->
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count()</h5>
                                        <small>Total Schedules</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(s => s.Status == "Completed")</h5>
                                        <small>Completed</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(s => s.Status == "In Progress")</h5>
                                        <small>In Progress</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(s => s.Status == "Scheduled")</h5>
                                        <small>Scheduled</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No schedules found</h5>
                            <p class="text-muted">Create your first pickup schedule to get started.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create New Schedule
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss success alerts after 5 seconds
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 5000);
    </script>
}
