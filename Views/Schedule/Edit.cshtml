@model AspnetCoreMvcFull.Models.Schedule
@{
	var collectors = ViewBag.Collectors as List<AspnetCoreMvcFull.Models.User>;
	var routes = ViewBag.Routes as List<AspnetCoreMvcFull.Models.Road>;
}

<h2>Edit Schedule</h2>

<form asp-action="Edit" method="post">
	<input type="hidden" asp-for="Id" />

	<div class="form-group">
		<label asp-for="TruckId"></label>
		<input asp-for="TruckId" class="form-control" />
		<span asp-validation-for="TruckId" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="CollectorId"></label>
		<select asp-for="CollectorId" class="form-control">
			@foreach (var collector in collectors)
			{
				<option value="@collector.Id" selected="@(collector.Id == Model.CollectorId)">
					@collector.FirstName @collector.LastName
				</option>
			}
		</select>
	</div>

	<div class="form-group">
		<label asp-for="RouteId"></label>
		<select asp-for="RouteId" class="form-control">
			@foreach (var route in routes)
			{
				<option value="@route.Id" selected="@(route.Id == Model.RouteId)">
					@route.Name
				</option>
			}
		</select>
	</div>

	<div class="form-group">
		<label asp-for="ScheduleStartTime"></label>
		<input asp-for="ScheduleStartTime" type="datetime-local" class="form-control" />
		<span asp-validation-for="ScheduleStartTime" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ScheduleEndTime"></label>
		<input asp-for="ScheduleEndTime" type="datetime-local" class="form-control" />
		<span asp-validation-for="ScheduleEndTime" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Status"></label>
		<input asp-for="Status" class="form-control" />
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="AdminNotes"></label>
		<textarea asp-for="AdminNotes" class="form-control"></textarea>
		<span asp-validation-for="AdminNotes" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success mt-3">Update</button>
</form>
