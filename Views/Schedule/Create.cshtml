@model AspnetCoreMvcFull.Models.ViewModels.ScheduleCreateViewModel

@{
	ViewData["Title"] = "Create Schedule";
}

<div class="container mt-4">
	<h2>Create Schedule</h2>

	<form asp-action="Create" method="post">
		@Html.AntiForgeryToken()
		<input type="hidden" asp-for="Schedule.Id" />

		<div class="form-group">
			<label asp-for="Schedule.TruckId"></label>
			<select asp-for="Schedule.TruckId" class="form-control">
				<option value="">-- Select Truck --</option>
				@foreach (var truck in Model.Trucks)
				{
					<option value="@truck.Id">@truck.Name</option>
				}
			</select>
			<span asp-validation-for="Schedule.TruckId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.CollectorId"></label>
			<select asp-for="Schedule.CollectorId" class="form-control">
				<option value="">-- Select Collector or Driver --</option>
				@foreach (var user in Model.Collectors)
				{
					<option value="@user.Id">@user.FirstName @user.LastName (@user.Role)</option>
				}
			</select>
			<span asp-validation-for="Schedule.CollectorId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.RouteId"></label>
			<select asp-for="Schedule.RouteId" class="form-control">
				<option value="">-- Select Route --</option>
				@foreach (var route in Model.Routes)
				{
					<option value="@route.Id">@route.Name</option>
				}
			</select>
			<span asp-validation-for="Schedule.RouteId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.ScheduleStartTime"></label>
			<input asp-for="Schedule.ScheduleStartTime" type="datetime-local" class="form-control" />
			<span asp-validation-for="Schedule.ScheduleStartTime" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.ScheduleEndTime"></label>
			<input asp-for="Schedule.ScheduleEndTime" type="datetime-local" class="form-control" />
			<span asp-validation-for="Schedule.ScheduleEndTime" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.Status"></label>
			<select asp-for="Schedule.Status" class="form-control">
				<option value="">-- Select Status --</option>
				@foreach (var status in Model.Statuses)
				{
					<option value="@status">@status</option>
				}
			</select>
			<span asp-validation-for="Schedule.Status" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Schedule.AdminNotes"></label>
			<textarea asp-for="Schedule.AdminNotes" class="form-control"></textarea>
			<span asp-validation-for="Schedule.AdminNotes" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-success mt-3">Create</button>
	</form>
</div>
