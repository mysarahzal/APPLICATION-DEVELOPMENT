@model AspnetCoreMvcFull.Models.Schedule

@{
	ViewData["Title"] = "Create Schedule";
}

<h1>Create Schedule</h1>

<form asp-action="Create">
	<div class="form-group">
		<label asp-for="TruckId" class="control-label"></label>
		<input asp-for="TruckId" class="form-control" />
		<span asp-validation-for="TruckId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="CollectorId" class="control-label">Driver</label>
		<select asp-for="CollectorId" class="form-control" asp-items="@(new SelectList(ViewBag.Collectors, "Id", "FirstName"))">
			<option value="">Select Driver</option>
		</select>
		<span asp-validation-for="CollectorId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RouteId" class="control-label">Route</label>
		<select asp-for="RouteId" class="form-control" asp-items="@(new SelectList(ViewBag.Routes, "Id", "RouteName"))">
			<option value="">Select Route</option>
			<option value="">Jalan Perkasa</option>
		</select>
		<span asp-validation-for="RouteId" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ScheduleStartTime" class="control-label"></label>
		<input asp-for="ScheduleStartTime" class="form-control" type="datetime-local" />
		<span asp-validation-for="ScheduleStartTime" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="ScheduleEndTime" class="control-label"></label>
		<input asp-for="ScheduleEndTime" class="form-control" type="datetime-local" />
		<span asp-validation-for="ScheduleEndTime" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Status" class="control-label"></label>
		<select asp-for="Status" class="form-control">
			<option value="Scheduled">Scheduled</option>
			<option value="In Progress">In Progress</option>
			<option value="Completed">Completed</option>
			<option value="Cancelled">Cancelled</option>
		</select>
		<span asp-validation-for="Status" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="AdminNotes" class="control-label"></label>
		<textarea asp-for="AdminNotes" class="form-control"></textarea>
		<span asp-validation-for="AdminNotes" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>
