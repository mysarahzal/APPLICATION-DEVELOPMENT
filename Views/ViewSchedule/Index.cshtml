@{
	ViewData["Title"] = "Driver View - Route Schedule";
}

@section VendorStyles {
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
}

<!-- Schedule Header -->
<div class="bg-white rounded shadow p-4 mb-4">
	<div class="d-flex justify-content-between align-items-center">
		<div>
			<h5 class="mb-1 fw-bold text-primary">🛣️ Route: Taman Molek Morning Route</h5>
			<p class="mb-0 text-muted">👨‍✈️ Driver: Ahmad Bin Salleh</p>
		</div>
		<div class="badge bg-label-success text-dark px-3 py-2 rounded-pill">
			4 Checkpoints
		</div>
	</div>
</div>

<!-- Map & Route Instructions -->
<div class="row">
	<div class="col-lg-8">
		<div id="scheduleMap" class="rounded shadow" style="height: 500px;"></div>
	</div>
	<div class="col-lg-4">
		<div class="card shadow-sm h-100">
			<div class="card-body overflow-auto" id="routeInfoBox" style="max-height: 500px;">
				<p class="text-muted">Loading route instructions...</p>
			</div>
		</div>
	</div>
</div>



@section VendorScripts {
	<script src="https://unpkg.com/leaflet@1.9.3/dist/leaflet.js"></script>
	<script src="https://unpkg.com/leaflet-routing-machine@3.2.12/dist/leaflet-routing-machine.min.js"></script>
}

@section PageScripts {
	<script src="~/js/viewschedule.js"></script>
}
