@model AspnetCoreMvcFull.Models.RouteBins

@{
    ViewData["Title"] = "Route-Bin Assignment Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Route-Bin Assignment Details</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Route Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Name:</dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.RoutePlan.Name)</strong>
                                        </dd>

                                        <dt class="col-sm-4">Description:</dt>
                                        <dd class="col-sm-8">
                                            @if (!string.IsNullOrEmpty(Model.RoutePlan.Description))
                                            {
                                                @Html.DisplayFor(model => model.RoutePlan.Description)
                                            }
                                            else
                                            {
                                                <em class="text-muted">No description</em>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Duration:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Html.DisplayFor(model => model.RoutePlan.ExpectedDurationMinutes) minutes</span>
                                        </dd>

                                        <dt class="col-sm-4">Order in Route:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-primary">@Html.DisplayFor(model => model.OrderInRoute)</span>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Bin Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Plate ID:</dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.Bin.BinPlateId)</strong>
                                        </dd>

                                        <dt class="col-sm-4">Location:</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Bin.Location)</dd>

                                        <dt class="col-sm-4">Zone:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Html.DisplayFor(model => model.Bin.Zone)</span>
                                        </dd>

                                        <dt class="col-sm-4">Fill Level:</dt>
                                        <dd class="col-sm-8">
                                            <div class="progress" style="width: 100px;">
                                                <div class="progress-bar @(Model.Bin.FillLevel > 80 ? "bg-danger" : Model.Bin.FillLevel > 60 ? "bg-warning" : "bg-success")"
                                                     role="progressbar" style="width: @Model.Bin.FillLevel%">
                                                    @Model.Bin.FillLevel%
                                                </div>
                                            </div>
                                        </dd>

                                        <dt class="col-sm-4">Client:</dt>
                                        <dd class="col-sm-8">
                                            <strong>@Html.DisplayFor(model => model.Bin.Client.ClientName)</strong>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

