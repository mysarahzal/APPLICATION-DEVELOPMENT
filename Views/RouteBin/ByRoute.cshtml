@model IEnumerable<AspnetCoreMvcFull.Models.RouteBins>

@{
    ViewData["Title"] = "Bins in Route: " + ViewBag.RouteName;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="card-title mb-0">Bins in Route: @ViewBag.RouteName</h4>
                        <small class="text-muted">Total bins: @Model.Count()</small>
                    </div>
                    <div>
                        <a asp-controller="Route" asp-action="ManageBins" asp-route-id="@ViewBag.RouteId" class="btn btn-success">
                            <i class="fas fa-cogs"></i> Manage Bins
                        </a>
                        <a asp-controller="Route" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Routes
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Order</th>
                                        <th>Bin Plate ID</th>
                                        <th>Location</th>
                                        <th>Zone</th>
                                        <th>Fill Level</th>
                                        <th>Client</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.OrderInRoute)</span>
                                            </td>
                                            <td>
                                                <strong>@Html.DisplayFor(modelItem => item.Bin.BinPlateId)</strong>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Bin.Location)</td>
                                            <td>
                                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Bin.Zone)</span>
                                            </td>
                                            <td>
                                                <div class="progress" style="width: 80px;">
                                                    <div class="progress-bar @(item.Bin.FillLevel > 80 ? "bg-danger" : item.Bin.FillLevel > 60 ? "bg-warning" : "bg-success")"
                                                         role="progressbar" style="width: @item.Bin.FillLevel%">
                                                        @item.Bin.FillLevel%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Bin.Client.ClientName)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No bins assigned to this route</h5>
                            <p class="text-muted">Use the Manage Bins feature to add bins to this route.</p>
                            <a asp-controller="Route" asp-action="ManageBins" asp-route-id="@ViewBag.RouteId" class="btn btn-success">
                                <i class="fas fa-cogs"></i> Manage Bins
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

