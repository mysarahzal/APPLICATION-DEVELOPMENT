@model AspnetCoreMvcFull.Models.MissedPickup

@{
	ViewData["Title"] = "Resolve Missed Pickup";
}

<h1>Resolve Missed Pickup</h1>
<hr />

<div class="row">
	<div class="col-md-6">
		<form asp-action="Resolve" method="post">
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="Reason" class="control-label"></label>
				<textarea asp-for="Reason" class="form-control" rows="3"></textarea>
				<span asp-validation-for="Reason" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Resolution" class="control-label"></label>
				<input asp-for="Resolution" class="form-control" />
				<span asp-validation-for="Resolution" class="text-danger"></span>
			</div>

			<button type="submit" class="btn btn-success mt-2">Submit</button>
			<a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
