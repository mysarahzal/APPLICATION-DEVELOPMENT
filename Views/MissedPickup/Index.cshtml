@model IEnumerable<AspnetCoreMvcFull.Models.MissedPickup>
@{
    ViewData["Title"] = "Missed Pickups";
    // Layout = "~/Views/Shared/_ContentNavbarLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bx bx-error-circle me-2 text-danger"></i>
                        Missed Pickups Management
                    </h5>
                    <div>
                        <a asp-action="Dashboard" class="btn btn-info me-2">
                            <i class="bx bx-bar-chart me-1"></i>
                            Dashboard
                        </a>
                        <a asp-action="Detect" class="btn btn-warning">
                            <i class="bx bx-search me-1"></i>
                            Manual Detection
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bx bx-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["InfoMessage"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="bx bx-info-circle me-2"></i>@TempData["InfoMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bx bx-error me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="alert alert-info mb-3">
                            <i class="bx bx-info-circle me-2"></i>
                            <strong>Note:</strong> Missed pickups are automatically detected when schedules pass their end time.
                            Use "Manual Detection" to find any missed records or update completed schedules.
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Schedule</th>
                                        <th>Route</th>
                                        <th>Collector</th>
                                        <th>Detected At</th>
                                        <th>Detection Type</th>
                                        <th>Status</th>
                                        <th>System Reason</th>
                                        <th style="min-width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>#@item.Schedule?.Id</strong>
                                                <br>
                                                <small class="text-muted">
                                                    @item.Schedule?.ScheduleStartTime.ToString("MMM dd, yyyy")
                                                </small>
                                                <br>
                                                <span class="badge @(item.Schedule?.AutomaticStatus == "Missed" ? "bg-danger" : "bg-secondary") badge-sm">
                                                    @item.Schedule?.AutomaticStatus
                                                </span>
                                            </td>
                                            <td>
                                                @item.Schedule?.Route?.Name
                                                <br>
                                                <small class="text-muted">
                                                    @item.Schedule?.CollectionPoints?.Count() points
                                                </small>
                                            </td>
                                            <td>
                                                @if (item.Schedule?.Collector != null)
                                                {
                                                    <span>@item.Schedule.Collector.FirstName @item.Schedule.Collector.LastName</span>
                                                    <br>
                                                    <small class="text-muted">@item.Schedule.Collector.Email</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Unknown Collector</span>
                                                }
                                            </td>
                                            <td>
                                                @item.DetectedAt.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@item.DetectedAt.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (item.Reason?.Contains("automatically") == true)
                                                {
                                                    <span class="badge bg-info">
                                                        <i class="bx bx-time me-1"></i>Auto
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bx bx-search me-1"></i>Manual
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Status == "Pending")
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="bx bx-time me-1"></i>Pending
                                                    </span>
                                                }
                                                else if (item.Status == "Resolved")
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bx bx-check me-1"></i>Resolved
                                                    </span>
                                                    @if (item.ResolvedAt.HasValue)
                                                    {
                                                        <br>
                                                        <small class="text-muted">@item.ResolvedAt.Value.ToString("MMM dd, HH:mm")</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@item.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Reason))
                                                {
                                                    <span title="@item.Reason">
                                                        @(item.Reason.Length > 50 ? item.Reason.Substring(0, 50) + "..." : item.Reason)
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Auto-detected</span>
                                                }
                                            </td>
                                            <td style="min-width: 150px;">
                                                <div class="d-flex gap-1">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-sm btn-info" title="View Details" style="white-space: nowrap;">
                                                        <i class="bx bx-show me-1"></i>Details
                                                    </a>
                                                    @if (item.Status == "Pending")
                                                    {
                                                        <a asp-action="Resolve" asp-route-id="@item.Id"
                                                           class="btn btn-sm btn-success" title="Resolve" style="white-space: nowrap;">
                                                            <i class="bx bx-check me-1"></i>Resolve
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Enhanced Summary Statistics -->
                        <div class="row mt-4">
                            <div class="col-md-2">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count()</h5>
                                        <small>Total Missed</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(m => m.Status == "Pending")</h5>
                                        <small>Pending</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(m => m.Status == "Resolved")</h5>
                                        <small>Resolved</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(m => m.Reason?.Contains("automatically") == true)</h5>
                                        <small>Auto-Detected</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h5>@Model.Count(m => m.DetectedAt.Date == DateTime.Today)</h5>
                                        <small>Today</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="card bg-secondary text-white">
                                    <div class="card-body text-center">
                                        <h5>@(Model.Any() ? Math.Round((double)Model.Count(m => m.Status == "Resolved") / Model.Count() * 100, 1) : 0)%</h5>
                                        <small>Resolution Rate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bx bx-check-circle display-1 text-success"></i>
                            <h4 class="mt-3">No Missed Pickups Found</h4>
                            <p class="text-muted">
                                All scheduled pickups are on track. The system automatically detects missed pickups when schedules pass their end time.
                                <br>
                                You can also run manual detection to check for any missed records.
                            </p>
                            <a asp-action="Detect" class="btn btn-warning mt-3">
                                <i class="bx bx-search me-1"></i>
                                Run Manual Detection
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Auto-refresh page every 10 minutes to show new missed pickups
        setInterval(function() {
            location.reload();
        }, 600000); // 10 minutes
    </script>
}
