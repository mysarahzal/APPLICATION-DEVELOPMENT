@model AspnetCoreMvcFull.Models.Truck

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Truck</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group mb-3">
				<label asp-for="LicensePlate" class="control-label"></label>
				<input asp-for="LicensePlate" class="form-control" required />
				<span asp-validation-for="LicensePlate" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label asp-for="Model" class="control-label"></label>
				<input asp-for="Model" class="form-control" required />
				<span asp-validation-for="Model" class="text-danger"></span>
			</div>

			<div class="form-group mb-3">
				<label class="control-label">Status</label>
				<div class="form-control-plaintext">
					<span class="badge bg-success">Available</span>
					<small class="text-muted d-block mt-1">New trucks are automatically set to Available status</small>
				</div>
			</div>

			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
