		<form asp-controller="Auth" asp-action="LoginBasic" method="post" class="mb-5">
			<div class="form-floating form-floating-outline mb-5">
				<input asp-for="Email" class="form-control" placeholder="Enter your email" autofocus />
				<label asp-for="Email">Email</label>
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mb-5">
				<div class="form-password-toggle">
					<div class="input-group input-group-merge">
						<div class="form-floating form-floating-outline">
							<input asp-for="Password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
