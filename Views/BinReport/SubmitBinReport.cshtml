@model AspnetCoreMvcFull.ViewModels.BinReportViewModel

<h2>Submit Bin Report</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="binId">Bin ID</label>
        <input type="text" name="BinId" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="issueDescription">Issue Description</label>
        <textarea name="IssueDescription" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="imageFile">Upload Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Report</button>
</form>

