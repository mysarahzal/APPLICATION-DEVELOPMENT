@{
    ViewData["Title"] = "Collection Records";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">ðŸ“‹ Collection Records</h2>

            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input type="text" id="searchInput" class="form-control" placeholder="Search by plate, location, client, collector...">
                                <div class="input-group-append">
                                    <button class="btn btn-primary" type="button" onclick="searchRecords()">
                                        <i class="fas fa-search"></i> Search
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-right">
                            <button class="btn btn-secondary" onclick="clearSearch()">
                                <i class="fas fa-times"></i> Clear
                            </button>
                            <button class="btn btn-info" onclick="refreshData()">
                                <i class="fas fa-sync-alt"></i> Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center" style="display: none;">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <p class="mt-2">Loading collection records...</p>
            </div>

            <!-- Records Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Collection Records</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th>Plate ID</th>
                                    <th>Location</th>
                                    <th>Client</th>
                                    <th>Collector</th>
                                    <th>Truck</th>
                                    <th>Date & Time</th>
                                    <th>GPS</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="recordsTableBody">
                                <!-- Records will be loaded here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Collection records pagination" class="mt-4">
                <ul class="pagination justify-content-center" id="pagination">
                    <!-- Pagination will be loaded here -->
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">ðŸ“¸ Collection Image</h5>
            </div>
            <div class="modal-body text-center">
                <div id="imageLoadingIndicator" class="mb-3">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading image...</span>
                    </div>
                    <p class="mt-2">Loading image...</p>
                </div>
                <img id="collectionImage" class="img-fluid" style="display: none; max-height: 500px; border: 1px solid #888; border-radius: 8px;" alt="Collection Image">
                <div id="imageError" class="alert alert-danger" style="display: none;">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Failed to load image</strong>
                    <br><small>The image may be corrupted or in an unsupported format.</small>
                </div>
                <div id="imageDetails" class="mt-3" style="display: none;">
                    <!-- Image details will be shown here -->
                </div>
            </div>
            <div class="modal-footer">
                <a id="downloadImageBtn" href="#" class="btn btn-primary" download style="display: none;">
                    <i class="fas fa-download"></i> Download Image
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/collection-records.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}
